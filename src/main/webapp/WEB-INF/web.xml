<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <context-param>
  <param-name>shirt</param-name>
  <param-value>1200</param-value>
  </context-param>
  
   <context-param>
  <param-name>shoe</param-name>
  <param-value>2800</param-value>
  </context-param>
  
   <context-param>
  <param-name>watch</param-name>
  <param-value>2200</param-value>
  </context-param>
  
  <servlet>
  <servlet-name>normal</servlet-name>
  <servlet-class>servlet_lifecycle.NormalBuy</servlet-class>

  
  <init-param>
  <param-name>discount</param-name>
  <param-value>200</param-value>
  </init-param>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>normal</servlet-name>
  <url-pattern>/normalbuy</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
  <welcome-file>Shopping.html</welcome-file>
  </welcome-file-list>
</web-app>
